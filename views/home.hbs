<!-- Hero Section -->
<section id="home" class="hero">
    <div class="container">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="fas fa-shield-alt"></i>
                <span>AI-Powered Protection</span>
            </div>
            <h1>Stop Spam Calls Before They Ring</h1>
            <p class="hero-description">Experience the next generation of call protection with SPAMKLR's on-device AI. Real-time speech-to-text and NLP detect fraud attempts instantly â€” all while keeping your conversations private.</p>
            <div class="hero-buttons">
                <a href="#waitlist" class="btn-primary">
                    <i class="fas fa-rocket"></i>
                    Join Early Access
                </a>
                <a href="#how-it-works" class="btn-secondary">
                    <i class="fas fa-play"></i>
                    See How It Works
                </a>
            </div>
            <div class="hero-stats">
                <div class="stat">
                    <div class="stat-number">{{stats.detectionRate}}</div>
                    <div class="stat-label">Detection Rate</div>
                </div>
                <div class="stat">
                    <div class="stat-number">{{stats.responseTime}}</div>
                    <div class="stat-label">Response Time</div>
                </div>
                <div class="stat">
                    <div class="stat-number">{{stats.privacyProtection}}</div>
                    <div class="stat-label">Privacy Protected</div>
                </div>
            </div>
        </div>
        <div class="hero-visual">
            <div class="phone-mockup">
                <div class="phone-screen">
                    <div class="call-interface">
                        <div class="caller-info">
                            <div class="spam-badge">SPAM DETECTED</div>
                            <div class="caller-name">Unknown Caller</div>
                            <div class="caller-number">+1 (555) 123-4567</div>
                        </div>
                        <div class="call-actions">
                            <div class="action-blocked">
                                <i class="fas fa-ban"></i>
                                <span>Automatically Blocked</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features">
    <div class="container">
        <div class="section-header">
            <h2>Enterprise-Grade Protection</h2>
            <p>Cutting-edge technology designed for maximum security and user experience</p>
        </div>
        <div class="features-grid">
            {{#each features}}
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="{{icon}}"></i>
                </div>
                <h3>{{title}}</h3>
                <p>{{description}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section id="how-it-works" class="how-it-works">
    <div class="container">
        <div class="section-header">
            <h2>How SPAMKLR Works</h2>
            <p>Three simple steps to complete call protection</p>
        </div>
        <div class="process-timeline">
            <div class="process-step">
                <div class="step-number">01</div>
                <div class="step-content">
                    <div class="step-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3>Language Detection & Call Interception</h3>
                    <p>Incoming unknown calls are intercepted, and the system detects language on-device before analysis begins.</p>
                </div>
            </div>
            <div class="process-step">
                <div class="step-number">02</div>
                <div class="step-content">
                    <div class="step-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <h3>Speech-to-Text & NLP Analysis</h3>
                    <p>The call is transcribed in real-time and analyzed with NLP to flag requests for sensitive info like OTPs, passwords, or bank details.</p>
                </div>
            </div>
            <div class="process-step">
                <div class="step-number">03</div>
                <div class="step-content">
                    <div class="step-icon">
                        <i class="fas fa-ban"></i>
                    </div>
                    <h3>User Protection</h3>
                    <p>If fraud is detected, SPAMKLR alerts you immediately and can automatically end the call while logging it securely.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials">
    <div class="container">
        <div class="section-header">
            <h2>Trusted by Thousands</h2>
            <p>See what our beta users are saying about SPAMKLR</p>
        </div>
        <div class="testimonials-grid">
            {{#each testimonials}}
            <div class="testimonial-card">
                <div class="testimonial-rating">
                    {{#times rating}}
                    <i class="fas fa-star"></i>
                    {{/times}}
                </div>
                <p class="testimonial-text">"{{comment}}"</p>
                <div class="testimonial-author">
                    <strong>{{name}}</strong>
                    <span>{{role}}</span>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="statistics">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-number">{{stats.totalSignups}}</div>
                <div class="stat-label">Protected Users</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">{{stats.recentSignups}}</div>
                <div class="stat-label">New This Week</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">1M+</div>
                <div class="stat-label">Calls Analyzed</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">99.9%</div>
                <div class="stat-label">Success Rate</div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section id="waitlist" class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2>Join the Waitlist Today</h2>
            <p>Be among the first to experience next-generation spam call protection. Early access members get exclusive benefits and lifetime discounts.</p>
            
            <div class="waitlist-form-container">
                <form id="waitlistForm" class="waitlist-form">
                    <div class="form-group">
                        <input type="text" id="name" name="name" placeholder="Your Full Name" required>
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" placeholder="Your Email Address" required>
                    </div>
                    <button type="submit" class="submit-btn">
                        <span>Secure My Spot</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </form>
                
                <div id="responseMessage" class="response-message"></div>
                
                <div class="form-benefits">
                    <div class="benefit">
                        <i class="fas fa-check"></i>
                        <span>Early access to beta</span>
                    </div>
                    <div class="benefit">
                        <i class="fas fa-check"></i>
                        <span>Lifetime discount</span>
                    </div>
                    <div class="benefit">
                        <i class="fas fa-check"></i>
                        <span>No spam, unsubscribe anytime</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>